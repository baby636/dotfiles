#!/bin/bash -e
{{ $pyenv_version := "1.2.19" -}}
{{ $pyenv_virtualenv_version := "1.1.5" -}}
{{ $global_python_version := "3.7.7" -}}

which pyenv 1>/dev/null || \
    (git clone https://github.com/pyenv/pyenv.git ~/.pyenv && \
     cd ~/.pyenv && \
     git checkout v{{ $pyenv_version }})

source ~/.bashrc

(~/.pyenv/bin/pyenv versions | grep {{ $global_python_version }} 1>/dev/null) || env PYTHON_CONFIGURE_OPTS="--enable-shared" pyenv install {{ $global_python_version }}
pyenv global {{ $global_python_version }}

pyenv virtualenv --help 1>/dev/null || \
    (cd $(pyenv root)/plugins && \
     git clone https://github.com/pyenv/pyenv-virtualenv.git && \
     cd pyenv-virtualenv && \
     git checkout v{{ $pyenv_virtualenv_version }})
